{
	"version": "2.0.0",
	"tasks": [
    {
      "label": "Configure Static Library (Debug)",
      "type": "shell",
      "command": "\"C:\\Program Files\\CMake\\bin\\cmake.exe\"",
      "args": [
        "--preset",
        "vs2022-deb"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build Static Library (Debug)",
      "type": "shell",
      "command": "\"C:\\Program Files\\CMake\\bin\\cmake.exe\"",
      "args": [
        "--build",
        "build/vs2022-deb",
        "--config",
        "Debug"
      ],
      "group": "build",
      "problemMatcher": [
        "$msCompile"
      ],
      "dependsOn": "Configure Static Library (Debug)"
    },
    {
      "label": "Configure Shared Library (Debug)",
      "type": "shell",
      "command": "\"C:\\Program Files\\CMake\\bin\\cmake.exe\"",
      "args": [
        "--preset",
        "vs2022-deb-shared"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build Shared Library (Debug)",
      "type": "shell",
      "command": "\"C:\\Program Files\\CMake\\bin\\cmake.exe\"",
      "args": [
        "--build",
        "build/vs2022-deb-shared",
        "--config",
        "Debug"
      ],
      "group": "build",
      "problemMatcher": [
        "$msCompile"
      ],
      "dependsOn": "Configure Shared Library (Debug)"
    },
    {
      "label": "Run Application (Static)",
      "type": "shell",
      "command": "build/vs2022-deb/bankid/Debug/bankid.exe",
      "group": "test",
      "dependsOn": "Build Static Library (Debug)"
    },
    {
      "label": "Run Application (Shared)",
      "type": "shell",
      "command": "build/vs2022-deb-shared/bankid/Debug/bankid.exe",
      "group": "test",
      "dependsOn": "Build Shared Library (Debug)"
    }
  ]
}